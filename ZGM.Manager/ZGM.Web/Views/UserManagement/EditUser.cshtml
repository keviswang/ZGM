        if (PHONE == null || PHONE == "") {
            layer.alert('手机号码不能为空!', {
                icon: 0,
                skin: 'layer-ext-seaning'
            });
           
            return false;
        }

        if (!(/^[1][358][0-9]{9}$/.test(PHONE))) {
            layer.alert('手机号码格式不正确!', {
                icon: 0,
                skin: 'layer-ext-seaning'
            });
          
            return false;
        }
        if (SPHONE != null && SPHONE != "") {
            if (!(/^[0-9]\d{1,7}$/.test(SPHONE))) {
                layer.alert('短号格式不正确!', {
