                skin: 'layer-ext-seaning'
            });
           
            return false;
        }
      
        //验证帐号是否可以修改 
        if (Account != null && Account != "") {
          
            $.ajax(
            {
                type: 'GET',
                url: '/UserManagement/validationAccountIsCanEdit',
                data: { Account: Account, UserID: $("#UserID").val() },
                async: false,
                success: function (data) {
                 
                    if (data == "True") {
                        layer.alert('该帐号已使用!', {
                            icon: 0,
                            skin: 'layer-ext-seaning'
                        });
                      
                        return false;
                    }
                    else {
                       
                        //验证执法证号是否唯一
                        if (ZFZBH != null && ZFZBH != "") {
                            $.ajax(
                            {
                                type: 'GET',
                                url: '/UserManagement/validationZFZHIsCanEdit',
                                data: { ZFZBH: ZFZBH, UserID: $("#UserID").val() },
                                async: false,
                                success: function (data) {
                                    if (data == "True") {
                                        layer.alert('该执法证号已存在!', {
                                            icon: 0,
                                            skin: 'layer-ext-seaning'
                                        });
                                      
                                        return false;
                                    }
                                    else {
                                        $("#EditUserForm").submit();
                                    }
                                },
                                error: function (result) {
                                    layer.alert(result + "程序出错请联系管理员", {
                                        icon: 0,
                                        skin: 'layer-ext-seaning'
                                    });
                                  
                                    return false;
                                }

                            });
                        }
                    }
                },
                error: function (result) {
                    layer.alert(result + "程序出错请联系管理员", {
                        icon: 0,
                        skin: 'layer-ext-seaning'
                    });
                 
                    return false;
                }

            });
        }


