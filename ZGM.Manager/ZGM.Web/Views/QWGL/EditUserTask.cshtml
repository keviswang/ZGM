                                {
                                <input type="radio" style="vertical-align: -2px;" name="AREAID" value="@(i.GEOMETRY)" onclick="changeAreaMap(this)" id="@(i.AREAID)" checked="checked"/><strong>@(i.AREANAME)</strong>
                                    
