        <style type="text/css">
        .tabson td {
            border: solid #b9aeae;
            border-width: 0px 1px 1px 0px;
            padding: 10px 0px;
            text-align: left;
            line-height: 30px;
            width: 40%;
        }

            .tabson td label {
                margin-left: 20px;
            }

        .tabson th {
            width: 170px;
            border: solid #b9aeae;
            border-width: 0px 1px 1px 0px;
            padding: 8px;
            text-align: center;
            line-height: 30px;
        }

        .tabson tr input.large {
            width: 98%;
            height: 30px;
        }

        .tabson tr input.small {
            width: 94%;
        }

        .tabson {
            width: 100%;
            border: solid #b9aeae;
            border-width: 1px 0px 0px 1px;
        }
    </style>


    <script type="text/javascript">
        function getQueryString(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
            var r = window.location.search.substr(1).match(reg);
            if (r != null)
                return unescape(r[2]);
            return null;
        }

        var MeetingID = getQueryString("MeetingID");
        var oTable;
        $(document).ready(function (e) {
            UserMeetingtableList(MeetingID);
            var pagenum = getQueryString("PageNum");
            if (pagenum != null && pagenum != "" && pagenum != undefined) {
                $(".itab a:eq(" + pagenum + ")").click();
            }
        });
        function UserMeetingtableList(MeetingID) {
            if (oTable != null) {
                oTable.fnSettings().sAjaxSource = "/Meeting/UserTableList";
                oTable.fnDraw(true);
            } else {
                oTable = $('#UserMeetingTableList').dataTable({
                    sAjaxSource: "/Meeting/UserTableList",
                    fnServerParams: function (aoData) {
                        aoData.push(
                              { "name": "MeetingID", "value": MeetingID }

                            );
                    },
                    aoColumns: [
                        { mDataProp: "USERNAME" },
                        {
                            mDataProp: function (data) {

                                var ISLEAVE;
                                if (data.ISLEAVE == "2") {
                                    ISLEAVE = "请假";
                                } else {
                                    ISLEAVE = "未请假";
                                }
                                return ISLEAVE;
                            }
                        },
                        { mDataProp: "LEAVECONTENT" },
                        { mDataProp: "LEAVETIME" },
                        {
                            mDataProp: function (data) {

                                var ISPARTIN;
                                if (data.ISPARTIN == "2") {
                                    ISPARTIN = "已同意";
                                } else {
                                    ISPARTIN = "未同意";
                                }
                                return ISPARTIN;
                            }
                        },
                         { mDataProp: "APPROVECONTENT" }
                    ],
                    aoColumnDefs: [{ sDefaultContent: '', aTargets: ['_all'] }],
                    fnDrawCallback: function (oSettings) {
                        var pagerIndex = oSettings._iDisplayStart / oSettings._iDisplayLength + 1;
                        var $currentPager = $(".dataTables_paginate span a:contains('" + pagerIndex + "')");
                        $currentPager.attr("style", "font-weight :bold;!important");
                    }
                });
            }
        }

        function Button_AskForLeave() {
            var MEETINGID = $("#MEETINGID").val();
            var LEAVEAUDITUSER = $("#LEAVEAUDITUSER").val();
            var LEAVECONTENT = $("#LEAVECONTENT").val();
            if (LEAVECONTENT == "" && LEAVECONTENT == null) {
                layer.alert('请添加请假意见！', {
                    icon: 0,
                    skin: 'layer-ext-seaning'
                });
                return false;
            }
            $.ajax({
                type: "POST",
                url: "/Meeting/LeaveToSubmitInformation",
                data: {
                    MEETINGID: MEETINGID, LEAVEAUDITUSER: LEAVEAUDITUSER, LEAVECONTENT: LEAVECONTENT
                },
                cache: false,
                success: function (data) {
                    if (data == 1) {
                        layer.alert('请假信息已提交!', { icon: 1, skin: 'layer-ext-seaning' }, function (index) {
                            layer.close(index);
                            location.href = "/Meeting/Index?PageNum=1";
                        });
                    }
                },
                error: function () {
                    layer.alert('网络异常，请重试！', {
                        icon: 0,
                        skin: 'layer-ext-seaning'
                    });
                }

            })

        }

    </script>

</head>

<body>
