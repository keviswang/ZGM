@{
    Layout = null;
}
@using ZGM.Model
@model ZGM.Model.XTBGModels.SMSMessageModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>短信审核</title>
    <link href="~/Content/css/OA.css" rel="stylesheet" />
    <link href="~/Scripts/assets/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Scripts/assets/timepicker/jquery-ui-timepicker-addon.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/assets/bootstrap/bootstrap.min.css" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script type="text/javascript" src="~/Scripts/js/select-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/jquery.idTabs.min.js"></script>
    <script src="~/Scripts/assets/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Scripts/assets/timepicker/jquery-ui-timepicker-addon.js"></script>
    <script src="~/Scripts/assets/timepicker/jquery-ui-timepicker-zh-CN.js"></script>
    <script src="~/Scripts/js/PageNotBack.js"></script>

    <link href="~/Scripts/layer/skin/layer.css" rel="stylesheet" />
    <link href="/Scripts/layer/skin/seaning/style.css" rel="stylesheet" />
    <script src="~/Scripts/layer/layer.js"></script>
    <script type="text/javascript">
        layer.config({
            skin: 'layer-ext-seaning',
            offset: ['100px', '33%'],
            title: '提示',
            moveOut: true,
            closeBtn: false,
            extend: 'skin/seaning/style.css'
        });

    </script>
    <style type="text/css">
        table td {
            border: solid #b9aeae;
            border-width: 0px 1px 1px 0px;
            padding: 10px 0px;
            text-align: left;
            line-height: 30px;
            width: 85%;
        }

            table td label {
                margin-left: 20px;
            }

        table th {
            width: 170px;
            border: solid #b9aeae;
            border-width: 0px 1px 1px 0px;
            padding: 8px;
            text-align: center;
            line-height: 30px;
        }

        table tr input.large {
            width: 98%;
            height: 30px;
        }

        table tr input.small {
            width: 94%;
        }

        table {
            width: 100%;
            border: solid #b9aeae;
            border-width: 1px 0px 0px 1px;
        }

        a, a:focus {
            text-decoration: none;
            color: #000;
        }
    </style>
    <script>
       

        function AddCallBack(flag) {
            if (flag == "SMS") {
                layer.alert("操作成功!", {
                    icon: 1,
                    skin: 'layer-ext-seaning'
                }, function (index) {
                    layer.close(index);
                    location.href = "/SMSMessage/Index?PageNum=2";
                });
            }
        }


        function goback() {
            location.href = "/SMSMessage/Index?PageNum=2";
        }
       
    </script>
</head>
<body>
    <div class="place" style="background-image: url(/Images/images/righttop.gif)">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="/SMSMessage/Index">短信息</a></li>
            <li>审核</li>
        </ul>
    </div>
    <div class="formbody">
        <div style="margin-bottom: 10px">
            <h6 style="font-size: 32px; text-align: center; margin-bottom: 20px; margin-top: 10px;">详情</h6>
        </div>
        <div id="tab1" class="tabson">
            <form method="post" enctype="multipart/form-data" action="/SMSMessage/Commit" onsubmit="return validate_form(this)" target="hidden_frame">
                <div>
                    <table style="margin-bottom: 20px;">
                        <tr>
                            <th>发送人 </th>
                            <td>
                                <label class="lablestyle">@Model.UserName</label>
                            </td>

                        </tr>
                        <tr>
                            <th>接收人 </th>
                            <td>
                                <label class="lablestyle">@Model.RECEIVEUSERSNAME</label>
                            </td>
                        </tr>
                        <tr>
                            <th>发送时间 </th>
                            <td>
                                <label class="lablestyle">@Model.SENDTIME</label>
                            </td>
                        </tr>
                        <tr>
                            <th>事件内容 </th>
                            <td>
                                <textarea style="margin-left: 20px; resize: none; width: 97%; height: 95px" id="CONTENT" name="CONTENT">@Model.CONTENT</textarea>

                            </td>
                        </tr>
                    </table>
                    <input type="hidden" name="SMSID" value="@Model.SMSID"/>
                    <input type="hidden" name="PHONES" value="@Model.PHONES"/>
                    <input type="hidden" name="SENDIDENTITY" value="@Model.SENDIDENTITY"/>

                    <div style="clear: both"></div>
                    <div style="margin-top: 10px;">
                        <div style="text-align: center;">
                            <input type="submit" class="btn btn-success" value="提　交" />
                            <input type="button" class="btn goBack" onclick="goback();" value="返　回" />
                        </div>
                    </div>

                </div>
            </from>
        </div>
        <iframe name='hidden_frame' id="hidden_frame" style="display: none"></iframe>
        
</body>
</html>
