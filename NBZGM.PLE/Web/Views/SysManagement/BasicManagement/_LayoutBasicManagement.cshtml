@{
    ViewBag.Title = "基础管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadStyles{
    <link href="~/Scripts/assets/data-tables/demo_table.css" rel="stylesheet" />
    <link href="~/Scripts/assets/data-tables/DT_bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/assets/zTree/zTreeStyle.css" rel="stylesheet" />
    @RenderSection("HeadStyles", required: false)
}

@section FootScripts{
    <script src="~/Scripts/assets/data-tables/jquery.datatables.min.js"></script>
    <script src="~/Scripts/assets/data-tables/DT_bootstrap.js"></script>
    <script src="~/Scripts/assets/data-tables/PLE_DT_bootstrap.js"></script>
    <script src="~/Scripts/assets/zTree/jquery.ztree.core-3.5.js"></script>
    <script src="~/Scripts/assets/zTree/jquery.ztree.excheck-3.5.min.js"></script>
    @RenderSection("FootScripts", required: false)
    <script type="text/javascript">
        setTimeout(function () {
            var scrollHeight = window.document.body.scrollHeight;
            var sidebarHeight = scrollHeight - 112;
            $("#sidebar").css("height", sidebarHeight);
        }, 2000);
    </script>
}

<div id="sidebar" class="nav-collapse" style="min-height: 600px;">
    <ul class="nav nav-list" id="sysManagerment">
        <li id="sysGroupManagement">
            <a href="/GroupManagement/Index">
                <i class="icon-group"></i>
                <span>用户组管理</span>
            </a>
        </li>
        <li id="sysUnitManagement">
            <a href="/UnitManagement/Index">
                <i class="icon-group"></i>
                <span>组织管理</span>
            </a>
        </li>
        <li id="sysUserManagement">
            <a href="/UserManagement/Index">
                <i class="icon-user"></i>
                <span>用户管理</span>
            </a>
        </li>
        <li id="sysFunctionManagement">
            <a href="/FunItemManagement/Index">
                <i class="icon-reorder"></i>
                <span>功能项管理</span>
            </a>
        </li>
        <li id="sysRoleManagement">
            <a href="/RoleManagement/Index">
                <i class="icon-male"></i>
                <span>角色管理</span>
            </a>
        </li>
        <li id="sysPermissionManagement">
            <a href="/permissionManagement/Index">
                <i class="icon-unlock-alt"></i>
                <span>授权管理</span>
            </a>
        </li>
    </ul>
    <div id="sidebar-collapse" class="visible-desktop">
        <i class="icon-double-angle-left"></i>
    </div>
</div>
<div id="main-content">
    <div style="min-height:500px;">
        @RenderSection("BreadcrumbSection", false)

        @RenderBody()
    </div>
    <footer>
        <p>2013-2014 © 钟公庙行政执法局.</p>
    </footer>
    <a id="btn-scrollup" class="btn btn-circle btn-large" href="#"><i class="icon-chevron-up"></i></a>
</div>
