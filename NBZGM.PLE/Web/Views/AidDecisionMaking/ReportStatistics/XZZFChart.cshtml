        var UnitName = $("#choseUntiName").val();
        var data = choseChangeYear + "-" + choseChangeMonth + "-1";
        //location.href = "/Statistics/XZZFPrintMe?data=" + data;
        window.open("/Statistics/XZZFPrintMe?data=" + data + "&UnitName=" + UnitName);
    }
</script>

