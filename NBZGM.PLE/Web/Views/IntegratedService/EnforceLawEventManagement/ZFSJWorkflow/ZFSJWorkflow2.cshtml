<script type="text/javascript">
    $(document).ready(function () {
        $("#veto").click(function () {
            $("#bc").val("1");
            $("#ZFSJWorkflow2")[0].submit();
        });
        $("#refuse").click(function () {
            $("#bc").val("2");
            $("#ZFSJWorkflow2")[0].submit();
        });

        //根据中队动态绑定中队人员
        $("#SSQJID").change(function () {
            $.ajax({
                type: "POST",
                url: "/Approval/GetUnitByUser",
                data: { UnitID: $(this).val() },
                cache: false,
                success: function (data) {
                    $("#SSZDID").empty();
                    $("#SSZDID").append("<option value=''>请选择</option>");
                    $.each(data, function (i, item) {
                        $("#SSZDID").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });
                }

            });
        })


        $("#PQDYID1").change(function () {
            $("#PQDYIDNAME1").val($("#PQDYID1 option:selected").text());
            $(this).val();
            $.ajax({
                type: "POST",
                data: { UserID: $(this).val() },
                cache: false,
                async: false,
                url: "/ZFSJWorkflow2/GetUserPhoneByUserID",
                success: function (data) {
                    $("#PhoneNum").text(data);
                    $("#smsusernum").val(data);
                },
                error: function () {
                    alert("网络繁忙无法加载电话号码，请重试");
                    $("#PhoneNum").text("无");
                }
            });
        })
    });

    function goback() {
        window.history.go(-1);
    }

    function FormSubmit() {
        if ($("#bc").val() == 1) {
            $("#btn-success").attr("disabled", "disabled");
            if ($.trim($("#PQDYID1").val())) {
                alert("请选择派遣队员");
                return false;
            }
        }
        return true;
    }
