                                            <div class="col-sm-9 col-lg-10 controls">
                                                @Html.DropDownList("QuestionDLID", ViewBag.QuestionDL as IEnumerable<SelectListItem>, "请选择大类")
                                            </div>
                                        </div>
                                    </td>
                                    <th style="text-align: center; line-height: 30px;">问题小类
                                    </th>
