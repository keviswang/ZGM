}

<div class="box box-black" style="margin: 5px;">
    <div class="box-title" style="color: white; height: 36px; line-height: 36px; padding-bottom: 0px; padding-top: 0px;">
        <i class="icon-reorder" style="margin-right: 5px;"></i>休息区域列表
    </div>
    <div class="box-content" style="min-height: 400px;">
        <div class="query">
            <table>
                <tr>
                    <td style="width: 80px">
                        <label style="vertical-align: bottom; margin-top: 5px; margin-bottom: 2px; float: left;">区域名称:</label></td>
                    <td style="width: 250px">
                        <input id="txtRestName" type="text" style="margin-top: 5px; margin-bottom: 0px; float: left;" />
                    </td>
                    <td>
                        <input id="btnQuery" type="button" style="margin-top: 5px; margin-bottom: 0px;" class="btn btn-info" title="查询" value="查 询">
                        <a href="@Url.Content("~/MemberPatrolRest/AddRest")" style="margin-top: 5px; margin-bottom: 0px;" class="btn btn-info" title="添加">添 加</a>
                    </td>
                </tr>
            </table>
        </div>
        <hr />
        <table class="table table-bordered table-striped table-hover fill-head" id="MemberPatrolArea">
            <thead>
                <tr>
                    <th style="text-align: center;">序号</th>
                    <th style="text-align: center;">区域名称</th>
                    <th style="text-align: center;">区域说明</th>
                    <th style="text-align: center;">操作</th>
                </tr>
            </thead>
        </table>
        <div style="clear: both"></div>
    </div>
</div>

