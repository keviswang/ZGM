@{
    Layout = "~/Views/IntegratedService/ScheduleManagement/_LayoutScheduleManagement.cshtml";
}


@section HeadStyles_ScheduleManage{
    <style type="text/css">
        .center {
            text-align: center !important;
        }
    </style>
}

@section FootScripts_ScheduleManage{
    <script type="text/javascript">
        var oTable = null;

        $(document).ready(function () {

            //绑定搜索按钮点击事件
            $("#btnQuery").click(function () {
                var url = "/MemberPatrolRest/GetMemberRest";
                //区域名称查询
                var restName = escape($("#txtRestName").val());

                url += "?restName=" + restName;
                url += "&random=" + Math.random();

                BindDataTable(url);
            });

            $("#btnQuery").click();
        })

        //定义 datatable 数据加载函数
        function BindDataTable(url) {
            if (oTable != null) {
                oTable.fnSettings().sAjaxSource = url;
                oTable.fnDraw(true);
            } else {
                oTable = $("#MemberPatrolArea").dataTable({
                    sAjaxSource: url,
                    aoColumns: [
                        { "mDataProp": "NumId", "sClass": "center" },
                        { "mDataProp": "RESTNAME", "sClass": "left" },
                        { "mDataProp": "areaDescription", "sClass": "left" },
                        { "mDataProp": "operating", "sClass": "center" }
                    ],
                    fnDrawCallback: function (oSettings) {
                        var pagerIndex = oSettings._iDisplayStart / oSettings._iDisplayLength + 1;
                        var $currentPager = $(".dataTables_paginate span a:contains('" + pagerIndex + "')");
                        $currentPager.attr("style", "font-weight :bold;!important");
                    }
                });
            }
        }

        function DeleteRest(restId) {
            if (!confirm("确认要删除?")) {
                return;
            }
            $.ajax({
                url: "/MemberPatrolRest/Delete?restId=" + restId,
                type: "get",
                success: function (data) {
                    alert(data);
                    location.reload();
                },
                error: function (mes) {
                    alert("操作失败");
                }
            });
        }

    </script>
}

