@model Taizhou.PLE.Model.RelevantItemWorkflowModels.RelevantItemForm

<div class="box" style="margin-top: 5px;">
    <div class="box-title">
        <span><i class="icon-folder-close"></i>查看相关事项审批</span>
        <ul class="nav nav-tabs">
            @{
                string display = "display:none;";
                string docName = "";
                string docSrc = "";
                if (Model.SPSXForm != null)
                {
                    display = "";
                    docName = Model.SPSXForm.SPSXDIName;
                    docSrc = Model.SPSXForm.SPSXDISrc;
                    docSrc = "/Document/GetPDFFile?DocPath=" +
                        Server.UrlEncode(docSrc) + "#scrollbar=0&statusbar=0";
                }
            }
            <li><a href="#divQTSXNBSPBDocContainer1" data-toggle="tab" style="@display">@docName</a></li>
            <li class="active"><a href="#divQTSXNBSPBFormContainer1" data-toggle="tab">相关事项审批表</a></li>
        </ul>
    </div>
    <div class="box-content">
        <div class="tab-content">
            <div class="tab-pane active" id="divQTSXNBSPBFormContainer1">
                <div class="title">
                    相关事项内部审批表
                </div>
                <table class="workflow" border="0" cellspacing="0" cellpadding="0" style="width: 700px; border-collapse: collapse; margin: 0 auto; margin-top: 20px;">
                    <tr>
                        <th colspan="2">申请事项</th>
                        <td colspan="4">@Html.TextBox("SQSX", Model.RelevantItemForm1.SQSX, new { disabled = "disabled" })</td>
                        <th colspan="2">文书编号</th>
                        <td colspan="5">@Html.TextBox("WSBH", Model.RelevantItemForm1.WSBH, new { disabled = "disabled" })</td>
                    </tr>
                    <tr>
                        <th colspan="2">案  由</th>
                        <td colspan="4">@Html.TextBox("AY", Model.RelevantItemForm1.AY, new { disabled = "disabled" })</td>
                        <th colspan="2">立案日期</th>
                        <td colspan="5">@Html.TextBox("LARQ", Model.RelevantItemForm1.LARQ, "{0:yyyy-MM-dd}", new { disabled = "disabled" })</td>
                    </tr>
                    <tr>
                        <th rowspan="5">当事人情况</th>
                        <th>姓名</th>
                        <td colspan="2">@Html.TextBox("XM", Model.RelevantItemForm1.XM, new { disabled = "disabled" })</td>
                        <th>性别</th>
                        <td colspan="2">
                            <select name="XB" id="XB" style="width: 80px;" class="gr" disabled="disabled">
                                @{
                                    string mSelected = Model.RelevantItemForm1.XB == "男" ? "selected=\"selected\"" : "";
                                    string wmSelected = Model.RelevantItemForm1.XB == "女" ? "selected=\"selected\"" : "";
                                }
                                <option value="男" @mSelected>男</option>
                                <option value="女" @wmSelected>女</option>
                            </select></td>

                        <th colspan="2">身份证号码</th>
                        <td colspan="4">@Html.TextBox("SFZH", Model.RelevantItemForm1.SFZH, new { disabled = "disabled" })</td>
                    </tr>
                    <tr>
                        <th>职业</th>
                        <td colspan="3">@Html.TextBox("ZY", Model.RelevantItemForm1.ZY, new { disabled = "disabled" })</td>
                        <th>民族</th>
                        <td colspan="2">@Html.TextBox("MZ", Model.RelevantItemForm1.MZ, new { disabled = "disabled" })</td>
                        <th>职务</th>
                        <td colspan="4">@Html.TextBox("ZW", Model.RelevantItemForm1.ZW, new { disabled = "disabled" })</td>
                    </tr>
                    <tr>
                        <th>名称</th>
                        <td colspan="4">@Html.TextBox("MC", Model.RelevantItemForm1.MC, new { disabled = "disabled" })</td>
                        <th colspan="2">法定代表人
                (负责人)</th>
                        <td colspan="5">@Html.TextBox("FDDBR", Model.RelevantItemForm1.FDDBR, new { disabled = "disabled" })</td>

                    </tr>
                    <tr>
                        <th>工作<br />
                            单位</th>
                        <td colspan="5">@Html.TextBox("GZDW", Model.RelevantItemForm1.GZDW, new { disabled = "disabled" })</td>
                        <th>电  话</th>
                        <td colspan="5">@Html.TextBox("DH", Model.RelevantItemForm1.DH, new { disabled = "disabled" })</td>
                    </tr>
                    <tr>
                        <th>住址<br />
                            (住所)</th>
                        <td colspan="5">@Html.TextBox("ZZ", Model.RelevantItemForm1.ZZ, new { disabled = "disabled" })</td>
                        <th>邮政<br />
                            编码</th>
                        <td colspan="5">@Html.TextBox("YZBM", Model.RelevantItemForm1.YZBM, new { disabled = "disabled" })</td>
                    </tr>
                    <tr>
                        <th>简要案情及申请理由依据和内容</th>
                        <td colspan="12">@Html.TextArea("JYAQ", Model.RelevantItemForm1.JYAQ, new { style = "height:150px;", disabled = "disabled" })</td>
                    </tr>
                    <tr>
                        <th>承办人意见</th>
                        <td colspan="12">@Html.TextArea("CBRYJ", Model.RelevantItemForm1.CBRYJ, new { style = "height:80px;", disabled = "disabled" })</td>
                    </tr>
                    @if (Model.RelevantItemForm2 != null && Model.RelevantItemForm2.ProcessTime != null)
                    {
                        <tr>
                            <th>承办机构审核意见</th>
                            <td colspan="12">@Html.TextArea("CBJGSHYJ", Model.RelevantItemForm2.CBJGSHYJ, new { style = "height:80px;", disabled = "disabled" })</td>
                        </tr>
                    }
                    @if (Model.RelevantItemForm3 != null && Model.RelevantItemForm3.ProcessTime != null)
                    {
                        <tr>
                            <th>行政机关负责人审批意见</th>
                            <td colspan="12">@Html.TextArea("XZJGFZRSPYJ", Model.RelevantItemForm3.XZJGFZRSPYJ, new { style = "height:110px;", disabled = "disabled" })</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="tab-pane" id="divQTSXNBSPBDocContainer1">
                <iframe src="@docSrc" width="100%" height="800px" id="ifm" marginheight="0" marginwidth="0" scrolling="0" frameborder="0"></iframe>
            </div>
        </div>
    </div>
</div>
