@model Taizhou.PLE.Model.XZSPNewModels.Workflow3
@using Taizhou.PLE.Model.XZSPNewModels
@{
    Layout = null;
}

<style>
    table th {
        width: 10%;
    }

    table td {
        width: 40%;
    }

    table tr input.large {
        width: 98%;
    }

    table tr input.small {
        width: 94%;
    }

    table tr td .form-group div {
        width: 94%;
        line-height: 30px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        //执法中队下拉框改变
        $("#ZFZDID").change(function () {
            var zfzdname = $("#ZFZDID option:selected").text()
            $("#ZFZDName").val(zfzdname)
        })
    });
</script>
<form method="post" enctype="multipart/form-data" action="/NewXZSPWorkflow3/Commit" id="XZSPWorkflow3">
    <div class="title" style="margin-bottom: 30px;">
        指派中队队员
    </div>
    <table class="table table-bordered" id="ContentTable">
    </table>

    <table class="table table-bordered">
        <tr>
            <th style="text-align: center; line-height: 30px;">选择队员</th>
            <td colspan="3" style="line-height: 30px; width: 40%">
                @Html.DropDownList("ZPDY", ViewBag.ZDDY as IEnumerable<SelectListItem>, new { @style = "width:20%;" })
            </td>
        </tr>
        <tr>
            <th style="text-align: center;">队员意见
            </th>
            <td colspan="3">
                <div class="form-group" style="margin-bottom: 5px;">
                    <div class="col-sm-9 col-lg-10 controls">
                        <textarea class="input-xlarge" style="height: 80px; width: 98.5%;" name="DYYJ" id="DYYJ"></textarea>
                    </div>
                </div>
            </td>
        </tr>
        <tr style="height:0px; border:none">
            <th></th>
            <td></td>
            <th></th>
            <td></td>
        </tr>
    </table>

    <table class="table table-bordered">
        <tr>
            <th></th>
            <td colspan="3" style="border-left: none;">
                <div class="form-group" style="margin-bottom: 5px;">
                    <div class="col-sm-9 col-lg-10 controls">
                        <input id="btnSubmit" type="submit" class="btn btn-success" value="提　交">
                        <a style="margin-left: 5px;" href="/NewApproval/NewApproval" class="btn goBack">返　回</a>
                    </div>
                </div>
            </td>
        </tr>
    </table>
    @Html.Hidden("ID")
    @Html.Hidden("AIID")
    @Html.Hidden("ADID")
    @Html.Hidden("ZPDY")
    @Html.Hidden("DYYJ")
</form>

