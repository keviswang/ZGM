    <div class="login-wrapper">
        <form id="form-login" method="post">
            <div class="control-group">
                <div class="controls">
                    <a target="_blank" style="text-decoration: none; float: right" href="http://10.1.1.5/TZ_Supervision.apk ">手机客户端下载</a>
                </div>
            </div>
            <h3>登录</h3>
            <hr />
            <div class="control-group">
                <div class="controls" id="account">
                    帐号&nbsp;&nbsp;<input type="text" name="account" placeholder="用户名" @*class="input-block-level"*@/>
                    <br />
                </div>
            </div>
            <div class="control-group" id="password">
                <div class="controls">
                    密码&nbsp;&nbsp;<input type="password" name="password" placeholder="密码" @*class="input-block-level"*@ />
                    <br />
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" @*class="btn btn-primary input-block-level"*@ class="btn btn-primary " style="width:227px;">登陆</button>
                </div>
            </div>

        </form>
    </div>
    <script src="/Scripts/assets/jquery/jquery.min.js"></script>
    <script src="~/Scripts/js/login/login.js"></script>
    <script type="text/javascript">
        function goToForm(form) {
            $('.login-wrapper > form:visible').fadeOut(500, function () {
                $('#form-' + form).fadeIn(500);
            });
        }
        $(function () {
            $('.goto-login').click(function () {
                goToForm('login');
            });
        });
        $(document).ready(function () {
            $("input[name=account]").removeAttr("height");
        });

    </script>
</body>
</html>

