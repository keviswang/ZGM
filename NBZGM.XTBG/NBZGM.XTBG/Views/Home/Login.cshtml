    <script src="~/Scripts/jquery/jquery-1.12.4.js"></script>
    <script src="~/Scripts/iconfont.js"></script>
    <script type="text/javascript">

        // Cloud Float...
        var $main = $cloud = mainwidth = null;
        var offset1 = 450;
        var offset2 = 0;

        var offsetbg = 0;

        $(document).ready(function () {
            $main = $("#mainBody");
            $body = $("body");
            $cloud1 = $("#cloud1");
            $cloud2 = $("#cloud2");
            mainwidth = $main.outerWidth();
            setInterval(function bg() {
                if (offsetbg >= mainwidth) { offsetbg = -580; }
                offsetbg += 0.9;
                $body.css("background-position", -offsetbg + "px 0")
            }, 80);
            setInterval(function flutter() {
                if (offset1 >= mainwidth) {
                    offset1 = -580;
                }

                if (offset2 >= mainwidth) { offset2 = -580; }
                offset1 += 1.1;
                offset2 += 1;
                $cloud1.css("background-position", offset1 + "px 100px")

                $cloud2.css("background-position", offset2 + "px 460px")
            }, 70);
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#loginbtn').click(function () {
                var $account = $("input[name=account]").val();
                var $password = $("input[name=password]").val();
                if ($account != "" && $password != "") {
                    $.ajax({
                        url: '/Home/CheckExist', type: "POST",
                        data: { account: $account, password: $password },
                        success: function (result) {
                            if (result.Status == "success") {
                                location.href = "/";
                            } else if (result.Status == "error") {
                                alert("用户不存在或账号或密码错误！");
                            }
                        },
                        error: function (result) {
                            alert("登陆异常，请联系管理员！");
                        },
                    });
                }
                return false;
            });
        });
    </script>
