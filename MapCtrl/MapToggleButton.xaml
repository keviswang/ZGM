<UserControl x:Class="MapCtrl.MapToggleButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Cursor="Hand">
        <Border x:Name="border" BorderBrush="#d6d4d4" BorderThickness="1" Background="#25a0da" Height="30" Width="30">
            <Grid x:Name="grid" Width="25" Height="25" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <TextBlock x:Name="textBlock" Text="a" Foreground="White" FontSize="17" FontFamily="/MapCtrl;component/Fonts/icomoon.ttf#icomoon" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
